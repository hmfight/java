<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wj.springmybatis.dao.TestUserDao">
    <resultMap id="userResMap" type="com.wj.springmybatis.model.TestUser">
        <id property="id" column="id"/>
        <result property="age" column="age"/>
        <result property="userName" column="user_name"/>
        <result property="email" column="email"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="all_column">
        id, user_name, age, email, create_time
    </sql>

    <sql id="column_no_id" >
        user_name, age, email, create_time
    </sql>

    <select id="getById" resultType="com.wj.springmybatis.model.TestUser" resultMap="userResMap" parameterType="java.lang.Long">
        select
        <include refid="all_column"/>
        from test_user
        where id = #{id}
    </select>
    <select id="getAll">
    </select>

    <insert id="ins" >
        INSERT INTO test_user (
        <include refid="column_no_id"/>
        )
        VALUES (#{userName}, #{age}, #{email}, #{createTime})
    </insert>

</mapper>